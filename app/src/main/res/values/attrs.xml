<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ApplicationTheme">
        <attr name="primaryColor" format="color|reference"/>
        <attr name="secondaryColor" format="color|reference"/>
        <attr name="backgroundColor" format="color|reference"/>
        <attr name="backgroundSecondaryColor" format="color|reference"/>
        <attr name="textColor" format="color|reference"/>
        <attr name="textSecondaryColor" format="color|reference"/>
        <attr name="textDisabledColor" format="color|reference"/>
    </declare-styleable>


    <declare-styleable name="YSTextView">
        <attr name="ys_type">
            <enum name="Bold" value="1" />
            <enum name="Light" value="2" />
            <enum name="Medium" value="3" />
            <enum name="Regular" value="4" />
            <enum name="RegularItalic" value="5" />
            <enum name="Thin" value="6" />
        </attr>
    </declare-styleable>

    <declare-styleable name="YSEditText">
        <attr name="yse_type">
            <enum name="Bold" value="1" />
            <enum name="Light" value="2" />
            <enum name="Medium" value="3" />
            <enum name="Regular" value="4" />
            <enum name="RegularItalic" value="5" />
            <enum name="Thin" value="6" />
        </attr>
    </declare-styleable>
</resources>