<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="18dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/background_round"
    android:backgroundTint="@color/backgroundSecondaryColorTransparent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/videoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/connected_devices_12"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="192.160.0.1"
        android:textStyle="bold|italic"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/videoSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Status:"
        android:textColor="@color/textSecondaryColor"
        android:textSize="@dimen/textSecondarySize"
        app:layout_constraintStart_toStartOf="@+id/videoName"
        app:layout_constraintTop_toBottomOf="@+id/videoName" />

    <TextView
        android:id="@+id/clientStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="wait for command"
        android:textColor="@color/primarySecondaryColor"
        android:textSize="@dimen/textSecondarySize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/videoSize"
        app:layout_constraintTop_toTopOf="@+id/videoSize" />


    <ProgressBar
        android:id="@+id/clientProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:progress="50"
        android:progressDrawable="@drawable/progressbar_track"
        app:layout_constraintEnd_toStartOf="@+id/clientProgressBarText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoSize" />


    <TextView
        android:id="@+id/clientProgressBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textSecondaryColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/clientProgressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/clientProgressBar"
        android:text="123/1234 kb" />

    <TextView
        android:id="@+id/videoThumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Disconnect"
        android:textColor="@color/primaryColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>