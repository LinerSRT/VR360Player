<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/background_round"
    android:backgroundTint="@color/backgroundSecondaryColor">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_wifi_tethering_24"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deviceHostName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Asus (192.168.0.1:8080)"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/devicePing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="52ms"
        android:textColor="@color/primaryColor"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />


    <TextView
        android:id="@+id/deviceStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Transferring video"
        android:textColor="@color/textSecondaryColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/deviceHostName"
        app:layout_constraintStart_toEndOf="@+id/deviceHostName"
        app:layout_constraintTop_toTopOf="@+id/deviceHostName" />

    <ProgressBar
        android:id="@+id/deviceStatusProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:progress="50"
        android:progressBackgroundTint="@color/backgroundColor"
        android:progressTint="#1565C0"
        app:layout_constraintEnd_toStartOf="@+id/deviceProgressBarData"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <TextView
        android:id="@+id/deviceProgressBarData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/textSecondaryColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/deviceStatusProgressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/deviceStatusProgressBar"
        tools:text="123/1234 kb" />


    <Button
        android:id="@+id/diconnectDevice"
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/red"
        android:text="Disconnect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/mediaControlLayout" />


    <Switch
        android:id="@+id/deviceAllowPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:checked="true"
        android:text="Allow play"
        android:textColor="@color/textSecondaryColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/diconnectDevice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/diconnectDevice" />

    <View
        android:id="@+id/view"
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:background="@drawable/background_round_left"
        android:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/mediaControlLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/deviceStatusProgressBar">


        <ru.liner.vr360server.views.LImageButton
            android:id="@+id/devicePlayPause"
            android:layout_width="40dp"
            android:layout_marginEnd="8dp"
            android:layout_height="40dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/backgroundColor"
            android:src="@drawable/ic_baseline_play_arrow_24"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/deviceHostName" />

        <ru.liner.vr360server.views.LImageButton
            android:id="@+id/deviceVolumeDown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/backgroundColor"
            android:src="@drawable/ic_baseline_volume_down_24"
            app:layout_constraintStart_toEndOf="@+id/devicePlayPause"
            app:layout_constraintTop_toTopOf="@+id/devicePlayPause" />

        <ru.liner.vr360server.views.LImageButton
            android:id="@+id/deviceVolumeUp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/backgroundColor"
            android:src="@drawable/ic_baseline_volume_up_24"
            app:layout_constraintStart_toEndOf="@+id/deviceVolumeDown"
            app:layout_constraintTop_toTopOf="@+id/devicePlayPause" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="50"
            app:layout_constraintBottom_toBottomOf="@+id/devicePlayPause"
            app:layout_constraintEnd_toStartOf="@+id/deviceProgressBarData2"
            app:layout_constraintStart_toEndOf="@+id/deviceVolumeUp"
            app:layout_constraintTop_toTopOf="@+id/devicePlayPause" />

        <TextView
            android:id="@+id/deviceProgressBarData2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondaryColor"
            android:textSize="12sp"
            tools:text="22:39/23:33" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>